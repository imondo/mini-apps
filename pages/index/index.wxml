<view id='page-scroll'>
  <button bindtap='openPopup'>打开浮层组件</button>
 <popup-item status="{{status}}">
    <view class="weui-cells__title">输入金额</view>
    <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd">
                <input class="weui-input" type="digit" bindinput="bindTofixed" placeholder="输入金额" />
            </view>
        </view>
    </view>

    <view class="weui-cells__title">文本域</view>
    <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell">
            <view class="weui-cell__bd">
                <textarea class="weui-textarea"cursor-spacing="50" bindinput="changTextarea" bindfocus="focusTextarea" bindblur="blurTextarea" adjust-position="true" placeholder="请输入文本" style="height: 3.3em" />
                <view class="weui-textarea-counter">0/200</view>
            </view>
        </view>
    </view>
 </popup-item>
 <!--控制textarea键盘遮挡  -->
 <view style='height: {{pageScrollHeight}}px'></view>
</view>
